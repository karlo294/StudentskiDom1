@using StudentskiDom.Models
@model Korisnik
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h2>Ažuriranje podataka o korisniku</h2>
    <h3>@Model.Ime @Model.Prezime</h3>




@using (Html.BeginForm("Azuriraj", "Korisnici", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Ispravite podatke");
    if (!ViewBag.Novi)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Id, new { disabled = true, @class = "form-control" })
            </div>
        </div>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Ime, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Ime, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Prezime, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Prezime, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Oib, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Oib, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Oib, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefon, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Telefon, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Email, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GodinaStudija, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(model => model.GodinaStudija, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GodinaStudija, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StatusStudenta, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.CheckBoxFor(model => model.StatusStudenta)
            @Html.ValidationMessageFor(model => model.StatusStudenta, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.pMjesto, new { @class = "col-sm-2 control-label" })
        <div class=”row”>

            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.pMjesto, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.pMjesto, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">

                @Html.TextBoxFor(model => model.Mjesto.nazivMjesto, new { disabled = true, @class = "form-control" })

            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Drzava, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Drzava, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Drzava, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>

    </div>
    <br />



    <!--button za spremanje-->
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span>Spremi
            </button>
        </div>
    </div>
}
<!--link za povratak-->
@Html.ActionLink("Povratak bez spremanja", "PopisKorisnika", "Korisnici")

